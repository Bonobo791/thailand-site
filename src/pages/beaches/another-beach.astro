---
import Layout from '../../layouts/Layout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

// Get the Koh Samui page from the content collection
const allPages = await getCollection('pages');
const anotherBeachPage = allPages.find((page: CollectionEntry<'pages'>) => page.slug === 'beaches/another-beach');

if (!anotherBeachPage) {
    throw new Error('Another Beach page not found in content collection');
}

// Get the content directly
const { Content } = await anotherBeachPage.render();
---

<Layout title={anotherBeachPage.data.title || 'Another Beach'}>
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-6">{anotherBeachPage.data.title || 'Another Beach'}</h1>

        <p class="mb-6">
            {anotherBeachPage.data.description || "Everything you need to know about visiting Another Beach, Thailand's second-largest island"}
        </p>

        <div class="markdown-content">
            <Content />
        </div>
    </div>
</Layout>
